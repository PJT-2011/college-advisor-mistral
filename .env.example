# Environment Variables for College Advisor Mistral

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/college_advisor_mistral?schema=public"

# Or MongoDB (uncomment if using MongoDB)
# DATABASE_URL="mongodb://localhost:27017/college_advisor_mistral"

# ============================================================================
# AUTHENTICATION
# ============================================================================
NEXTAUTH_SECRET="your-super-secret-jwt-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# ============================================================================
# MISTRAL LLM LOCAL
# ============================================================================
# Path to downloaded Mistral model weights
MISTRAL_MODEL_PATH="./models/mistral-7b-instruct-v0.3.Q4_K_M.gguf"

# GPU Configuration (optional)
USE_GPU=true
GPU_LAYERS=35

# Model Settings
MISTRAL_CONTEXT_SIZE=4096
MISTRAL_TEMPERATURE=0.7
MISTRAL_MAX_TOKENS=512

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV="development"
PORT=3000
